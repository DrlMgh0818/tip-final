---
// FacultyCard.astro
const { name, department, position, image, biography, socials } = Astro.props;
---

<div class="flex items-center h-screen w-full justify-center">
  <div class="max-w-xs">
    <div class="bg-white shadow-xl rounded-lg py-3">
      <div class="photo-wrapper p-2">
        <img src={image} alt={`Image of ${name}`} class="w-32 h-32 rounded-full mx-auto" />
      </div>
      <div class="p-2">
        <h3 class="text-center text-xl text-gray-900 font-medium leading-8">{name}</h3>
        <div class="text-center text-gray-400 text-xs font-semibold">
          <p>{position}, {department}</p>
        </div>
        <p class="text-sm text-gray-700 px-6">{biography}</p>

        <!-- Social Links -->
        <div class="flex justify-center mt-4">
          {socials.map((social) => (
            <a href={social.url} target="_blank" rel="noopener noreferrer" class="mx-2">
              <img src={`/icons/${social.type}.svg`} alt={social.type} class="w-6 h-6" /> {/* Assuming you have icons for each social network */}
            </a>
          ))}
        </div>

        <div class="text-center mt-4">
          <a class="text-xs text-indigo-500 italic hover:underline hover:text-indigo-600 font-medium" href="#">View Full Profile</a> {/* Adjust the href to link to the full profile */}
        </div>
      </div>
    </div>
  </div>
</div>
